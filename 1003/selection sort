#include <iostream>
#include <fstream>
#include <chrono>
#include <vector>
#include <cstdlib>
using namespace std;
using namespace std::chrono;

void SelectionSort (int *a, const int n){
    for(int i = 0;i < n;i++){
        int j = i;
        for(int k = i + 1;k < n;k++)
            if(a[k] < a[j])
                j = k;
        swap(a[i], a[j]);
    }
}

int main(){
    ofstream fout("SelectionSort.csv");
    int max = 3000;
    
    for(int n = 0;n <= max;n++){
        long long total;
        vector <int> a(n);
        for(int i = 0;i < n;i++)
            a[i] = n-i;
        auto start = high_resolution_clock::now();
        SelectionSort(a.data(), n);
        auto end = high_resolution_clock::now();
        total = duration_cast<nanoseconds>(end - start).count();
        cout << total << endl;
        fout << n << "," << total << "\n";
    }
    fout.close();
    cout << "end";
    
    return 0;
}
