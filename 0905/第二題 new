#include <iostream>
#include <cstring>
#include <string>
#include <cstdlib>
#include <map>
#include <algorithm>
using namespace std;

int main(){
    int x = 0, y = 0, z = 0, m = 0, n = 0;
    string fn, ln;
    map <int, string> students;
    cout << "請輸入學生人數";
    cin >> x;
    cout << "請輸入學生姓名";
    for(int i = 0;i < x;i++){
        cin >> fn >> ln;
        if(ln.back() == ',')
            ln.pop_back();
        int flen = fn.size();
        if(flen > z)
            z = flen;
        int len = flen + ln.size();
        if(len > y)
            y = len;
        students[i] = (fn + " " + ln);
    }
    char **names = new char*[x];
    for(int i = 0;i < x;i++){
        names[i] = new char[y+1];
        string s = students[i];
        strcpy(names[i], s.c_str());
    }
    cout << "輸出結果:\n";
    for(int i = 0;i < x;i++){
        char *pos = std::find(names[i], names[i] + strlen(names[i]), ' ');
        for(int j = 0;j < (z - (pos - names[i]));j++)
            cout << " ";
        cout << names[i] << endl;
    }
    
    
    
    return 0;
}
