#include <iostream>
#include <cstring>
#include <string>
#include <cstdlib>
#include <map>
#include <algorithm>
using namespace std;

int main(){
    int x = 0, y = 0, z = 0, m = 0, n = 0;
    string name;
    map <int, string> students;
    //輸入學生人數
    cout << "請輸入學生人數";
    cin >> x;
    //將學生姓名放入map中暫存
    cout << "請輸入學生姓名";
    cin.ignore();
    for(int i = 0;i < x;i++){
        getline(cin, name);
        int len = name.size();
        //找出最長姓名長度
        if(len > y)
            y = len;
        students[i] = name;
    }
    //建立new二維動態陣列
    char **names = new char*[x];
    for(int i = 0;i < x;i++){
        names[i] = new char[y+1];
        string s = students[i];
        //將姓名從map放入陣列
        strcpy(names[i], s.c_str());
    }
    //找出空白格前的最長長度
    for(int i = 0;i < x;i++){
        char *space = find(names[i], names[i] + strlen(names[i]), ' ');
        if((space - names[i]) > z)
            z = space - names[i];
    }
    //對齊空白格並輸出結果
    cout << "輸出結果:\n";
    for(int i = 0;i < x;i++){
        char *pos = std::find(names[i], names[i] + strlen(names[i]), ' ');
        for(int j = 0;j < (z - (pos - names[i]));j++)
            cout << " ";
        cout << names[i] << endl;
    }
    //釋放所佔用的記憶體
    for(int i = 0;i < x;i++)
        delete [] names[i];
    delete [] names;
    
    
    return 0;
}
